generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  passwordHash       String?
  name               String?
  subscriptionTier   String   @default("free") // free | pro
  monthlyReviewsUsed Int      @default(0)
  displayFrameworks  String[] @default(["js", "react"])
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // NextAuth fields
  emailVerified DateTime?
  image         String?

  // Relations
  skillMatrix        UserSkillMatrix[]
  performanceHistory PerformanceHistory[]
  submissions        Submission[]
  snippets           Snippet[]
  feedback           Feedback[]
  misconceptions     Misconception[]
  progress           UserProgress?
  accounts           Account[]
  sessions           Session[]
}

model Topic {
  id                Int      @id @default(autoincrement())
  slug              String   @unique
  name              String
  layer             String   // FUNDAMENTALS | INTERMEDIATE | PATTERNS
  category          String
  frameworkAffinity String   // js-pure | react-specific | shared
  criticality       String   @default("medium") // critical | high | medium | low
  parentTopicId     Int?
  prerequisites     Int[]    @default([])
  detectionRules    Json?

  // Relations
  parentTopic        Topic?              @relation("TopicHierarchy", fields: [parentTopicId], references: [id])
  childTopics        Topic[]             @relation("TopicHierarchy")
  skillMatrix        UserSkillMatrix[]
  performanceHistory PerformanceHistory[]
}

model UserSkillMatrix {
  userId           String
  topicId          Int
  rating           Float     @default(1500)
  rd               Float     @default(350)
  volatility       Float     @default(0.06)
  timesEncountered Int       @default(0)
  lastPracticed    DateTime?
  isStuck          Boolean   @default(false)
  stuckSince       DateTime?

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic Topic @relation(fields: [topicId], references: [id])

  @@id([userId, topicId])
}

model PerformanceHistory {
  id               Int      @id @default(autoincrement())
  userId           String
  topicId          Int
  submissionId     String
  performanceScore Float    // 0.0 - 1.0
  errorType        String?  // SLIP | MISTAKE | MISCONCEPTION
  ratingBefore     Float
  ratingAfter      Float
  rdBefore         Float
  rdAfter          Float
  createdAt        DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic      Topic      @relation(fields: [topicId], references: [id])
  submission Submission @relation(fields: [submissionId], references: [id])
}

model Submission {
  id           String   @id @default(cuid())
  userId       String
  snippetId    String?
  code         String
  language     String   // javascript | typescript | jsx | tsx
  description  String?
  analysisData Json?    // includes framework context
  createdAt    DateTime @default(now())

  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippet            Snippet?             @relation(fields: [snippetId], references: [id], onDelete: SetNull)
  feedback           Feedback[]
  performanceHistory PerformanceHistory[]
}

model Snippet {
  id             String   @id @default(cuid())
  userId         String
  title          String   @default("Untitled")
  code           String   @default("")
  language       String   @default("javascript")
  cachedCoaching Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@index([userId, updatedAt(sort: Desc)])
}

model Feedback {
  id             String   @id @default(cuid())
  submissionId   String
  userId         String
  feedbackText   String
  analysisLayers Json?
  stuckTopics    Json?
  tokensUsed     Int      @default(0)
  cost           Decimal  @default(0)
  createdAt      DateTime @default(now())

  submission Submission @relation(fields: [submissionId], references: [id])
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Misconception {
  id            Int       @id @default(autoincrement())
  userId        String
  pattern       String    // e.g., "Thinks setState is synchronous"
  evidenceCount Int       @default(1)
  firstSeen     DateTime  @default(now())
  lastSeen      DateTime  @default(now())
  isResolved    Boolean   @default(false)
  resolvedAt    DateTime?
  relatedTopics Int[]     @default([])

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserProgress {
  userId                 String    @id
  fundamentalsRating     Float     @default(1500)
  fundamentalsRd         Float     @default(350)
  intermediateRating     Float     @default(1500)
  intermediateRd         Float     @default(350)
  patternsRating         Float     @default(1500)
  patternsRd             Float     @default(350)
  intermediateUnlocked   Boolean   @default(false)
  intermediateUnlockedAt DateTime?
  patternsUnlocked       Boolean   @default(false)
  patternsUnlockedAt     DateTime?
  totalReviews           Int       @default(0)
  lastReviewAt           DateTime?
  estimatedLevel         String    @default("beginner") // beginner | intermediate | advanced

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
